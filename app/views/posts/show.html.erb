<p id="notice"><%= notice %></p>

<h3>Title:</h3>
<%= @post.name %>
<h3>Content:</h3>
<%= @post.content %>

<ul>
  <h3>Comments:</h3>
  <% @post.comments.each do |d| %>
  <li><%= d.user_id %></li>
  <li><%= d.content %></li>
  <% end %>
</ul>

<%= form_for @comment do |g|%>
<%= g.text_field(:content, id: "Content")%>
<%= hidden_field_tag(:post_id, @post.id) %>
<%= hidden_field_tag(:user_id, @post.user.id) %>
<%= g.submit %>
<% end %>

<h3>Tags:</h3>
<ul>
  <% @post.tags.each do |tag| %>
  <li><%= tag.name %></li>
  <% end %>
</ul>



<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
